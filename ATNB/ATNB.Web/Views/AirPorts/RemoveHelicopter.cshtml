@model IEnumerable<ATNB.Model.Helicopter>

@{
    ViewBag.Title = "RemoveHelicopter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Remove Helicopter(s) from @ViewBag.AirPortId</h2>

@using (Html.BeginForm("RemoveHelicopterFromAirPort", "Airports"))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="airPortId" value="@ViewBag.AirPortId" />
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    List Helicopters
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Choose</th>
                                    <th>Id</th>
                                    <th>Model</th>
                                    <th>Cruise Speed</th>
                                    <th>Empty Weight</th>
                                    <th>Max Takeoff Weight</th>
                                    <th>Range</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeA">
                                        <td>
                                            <input name="listIdCheck" type="checkbox" value="@item.Id">
                                        </td>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.Model
                                        </td>
                                        <td>
                                            @item.CruiseSpeed
                                        </td>
                                        <td>
                                            @item.EmptyWeight
                                        </td>
                                        <td>
                                            @item.MaxTakeoffWeight
                                        </td>
                                        <td>
                                            @item.Range
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="7">
                                        <input type="submit" value="Save" class="btn btn-success" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}